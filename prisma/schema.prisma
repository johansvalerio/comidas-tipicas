generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Uses connection pooling
  url = env("POSTGRES_PRISMA_URL")
  // Uses direct connection, ⚠️ make sure to keep this to `POSTGRES_URL_NON_POOLING`
  // or you'll have dangling databases from migrations
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model users {
  user_id         Int      @id @default(autoincrement())
  user_name       String   @unique
  user_password   String
  user_created_on DateTime @default(now())
  user_email      String   @unique
  order           orders[]
  user_role       user_role?
}

model roles {
  role_id   Int    @id @default(autoincrement())
  role_name String @unique
  user_role user_role[]
}

model user_role {
  role_id   Int    
  role      roles  @relation(fields: [role_id], references: [role_id])
  user_id   Int    @unique
  user      users  @relation(fields: [user_id], references: [user_id])
}

model comidas {
  comida_id          Int      @id @default(autoincrement())
  comida_name        String
  comida_description String
  comida_price       Float
  comida_created_on  DateTime @default(now())
  comida_updated_at  DateTime @updatedAt
  order              orders[]
}

model orders {
  order_id         Int      @id @default(autoincrement())
  order_created_on DateTime @default(now())
  order_updated_at DateTime @updatedAt
  order_address    String
  order_comment    String
  order_status     String
  order_total      Float
  order_quantity   Int

  user_id          Int       
  comida_id        Int      
  comida           comidas  @relation(fields: [comida_id], references: [comida_id])
  user             users    @relation(fields: [user_id], references: [user_id])
}
